<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo.CalculadoraController"
          hgap="10" vgap="10" alignment="center">

    <TextField fx:id="pantalla" GridPane.columnSpan="4" editable="false" style="-fx-font-size: 20px;"/>

    <Button text="7" onAction="#agregarNumero" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="8" onAction="#agregarNumero" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="9" onAction="#agregarNumero" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
    <Button text="/" onAction="#operar" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

    <Button text="4" onAction="#agregarNumero" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="5" onAction="#agregarNumero" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="6" onAction="#agregarNumero" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    <Button text="*" onAction="#operar" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

    <Button text="1" onAction="#agregarNumero" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Button text="2" onAction="#agregarNumero" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Button text="3" onAction="#agregarNumero" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
    <Button text="-" onAction="#operar" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

    <Button text="0" onAction="#agregarNumero" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Button text="C" onAction="#limpiar" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Button text="=" onAction="#calcular" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
    <Button text="+" onAction="#operar" GridPane.rowIndex="4" GridPane.columnIndex="3"/>

</GridPane>
